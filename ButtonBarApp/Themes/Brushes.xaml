        <GradientStop Color="#FFFFAE03" Offset="1"/>
      </GradientStopCollection>
    </LinearGradientBrush.GradientStops>
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="ButtonPressedBackground" StartPoint="0.5,0" EndPoint="0.5,1">
    <LinearGradientBrush.GradientStops>
      <GradientStopCollection>
        <GradientStop Color="#FFdca470" Offset="0"/>
        <GradientStop Color="#FFf9ae71" Offset="0.1"/>
        <GradientStop Color="#FFe57840" Offset="0.54"/>
        <GradientStop Color="#FFde550a" Offset="0.54"/>
        <GradientStop Color="#FFfa9845" Offset="1"/>
      </GradientStopCollection>
    </LinearGradientBrush.GradientStops>
  </LinearGradientBrush>

  <RadialGradientBrush x:Key="ButtonPressedBottomHighlight" Center=".5,1" GradientOrigin=".5,1" RadiusX=".7" RadiusY=".6">
